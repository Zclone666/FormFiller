<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppPir.ExportScreen"
             Title="ExportScreen">
    <VerticalStackLayout>
        <VerticalStackLayout.Background>
            <LinearGradientBrush EndPoint="1,0">
                <GradientStop Color="#AEC09A"
                          Offset="0.1" />
                <GradientStop Color="#AEC670"
                          Offset="1.0" />
            </LinearGradientBrush>
        </VerticalStackLayout.Background>
        <Button Text="Отправить все" HorizontalOptions="Center" x:Name="Share" Clicked="Share_Clicked" TextColor="#fffff0" BackgroundColor="#344c11"/>
        <CollectionView x:Name="DBRecords">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="1" Orientation="Vertical" />
            </CollectionView.ItemsLayout>

        </CollectionView>
    </VerticalStackLayout>
</ContentPage>