<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppPir.IntermediateScreen_Trauma"
             Title="IntermediateScreen_Trauma">
    <VerticalStackLayout x:Name="VerticalStackL">
        <VerticalStackLayout.Background>
            <LinearGradientBrush EndPoint="1,0">
                <GradientStop Color="#AEC09A"
                          Offset="0.1" />
                <GradientStop Color="#AEC670"
                          Offset="1.0" />
            </LinearGradientBrush>
        </VerticalStackLayout.Background>
        <SearchBar Placeholder="Номер жетона" x:Name="Search_ID" IsVisible="True" IsTextPredictionEnabled="True" IsEnabled="True"  TextColor="#344c11" BackgroundColor="#ffffff">
        </SearchBar>
        <SearchBar Placeholder="Позывной" x:Name="Search_nick" IsVisible="False" IsTextPredictionEnabled="True" IsEnabled="True"  TextColor="#344c11" BackgroundColor="#ffffff">
        </SearchBar>
        <Button Text="Назад" BackgroundColor="Green" TextColor="White" Clicked="Back_Clicked" x:Name="Back"/>
        <Button Text="Далее" x:Name="Next" Clicked="Next_Clicked"></Button>
        <!-- <ListView x:Name="searchResults" ItemTapped="searchResults_ItemTapped"/> -->
    </VerticalStackLayout>
</ContentPage>